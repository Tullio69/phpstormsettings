<keymap version="1" name="Default for Laptop" parent="$default">
  <action id="ExpandAllRegions">
    <keyboard-shortcut first-keystroke="shift ctrl add" />
    <keyboard-shortcut first-keystroke="shift ctrl plus" />
  </action>
  <action id="ExpandRegion">
    <keyboard-shortcut first-keystroke="ctrl add" />
    <keyboard-shortcut first-keystroke="ctrl equals" />
    <keyboard-shortcut first-keystroke="ctrl plus" />
  </action>
  <action id="ExpandRegionRecursively">
    <keyboard-shortcut first-keystroke="ctrl alt equals" />
    <keyboard-shortcut first-keystroke="ctrl alt plus" />
  </action>
  <action id="GotoNextBookmark">
    <keyboard-shortcut first-keystroke="alt page_down" />
  </action>
  <action id="GotoPreviousBookmark">
    <keyboard-shortcut first-keystroke="alt page_up" />
  </action>
</keymap>